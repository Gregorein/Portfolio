{
  "private": true,
  "description": "greg bak portfolio",
  "version": "2.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn run -s serve || yarn run -s dev",
    "build": "preact build --template src/template.html",
    "serve": "sirv build --template src/template.html --port 8080 --cors --single",
    "dev": "preact watch --template src/template.html",
    "hash": "node --experimental-modules blurhash.js",
    "api": "http-server -p 8000 --cors",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "blurhash": "^1.1.3",
    "canvas": "^2.6.1",
    "classnames": "^2.2.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "http-server": "^0.12.3",
    "if-env": "^1.0.4",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "pngjs": "^5.0.0",
    "preact-cli": "^3.0.0",
    "preact-context": "^1.1.4",
    "preact-render-spy": "^1.3.0",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "sirv-cli": "1.0.3",
    "webpack-bundle-analyzer": "^3.8.0"
  },
  "dependencies": {
    "moment": "^2.27.0",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-blurhash": "^0.1.2",
    "smooth-scroll": "^16.1.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
